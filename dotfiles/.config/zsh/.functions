reload_config() {
  source $ZDOTDIR/.zshrc;
  echo "Zsh reloaded!";
}

my_nvim() {
  if [ "$1" != "" ]
  then
    nvim $1
  else
    nvim .
  fi
}

## print hex value of a number
hex() {
    if [[ -n "$1" ]]; then
        printf "%x\n" $1
    else
        print 'Usage: hex <number-to-convert>'
        return 1
    fi
}
